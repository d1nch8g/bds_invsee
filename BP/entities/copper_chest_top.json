{
  "format_version": "1.20.60",
  "minecraft:entity": {
    "description": {
      "identifier": "iron_chests:copper_chest_top",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups": {
      "iron_chests:despawn": {
        "minecraft:instant_despawn": {
          "remove_child_entities": false
        }
      }
    },
    "components": {
      "minecraft:type_family": {
        "family": [
          "chest",
          "top",
          "inanimate"
        ]
      },

      "minecraft:collision_box": {
        "height": 0,
