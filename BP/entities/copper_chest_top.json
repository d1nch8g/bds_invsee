      },
      "minecraft:custom_hit_test": {
        "hitboxes": [
          {
            "width": 0,
            "height": 0,
            "pivot": [
              0,
              0,
              0
            ]
          }
        ]
      },
      "minecraft:health": {
        "value": 1
      },
      "minecraft:fire_immune": {},
      "minecraft:damage_sensor": {
        "triggers": {
          "cause": "all",
          "deals_damage": false
        }
      },
      "minecraft:nameable": {
        "allow_name_tag_renaming": false,
        "always_show": false
      },
      "minecraft:timer": {
        "time": 0.1,
        "looping": true,
        "time_down_event": {
          "event": "tick",
          "target": "self"
        }
      }
    },
    "events": {
      "iron_chests:despawn_chest": {
        "add": {
          "component_groups": ["iron_chests:despawn"]
        }
